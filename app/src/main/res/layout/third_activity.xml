                android:layout_height="wrap_content"
                android:text="নামাজের দোয়া ও সূরা"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/fatiha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা ফাতিহা"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/ikhlas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা ইখলাস"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/nas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা আন নাস"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/falak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা ফালাক"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/kafirun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা কাফিরুন "
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/nasor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" সূরা আন নাসর "
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/kausar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা কাওসার "
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/maun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা মাউন"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/kurais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সূরা কুরাইশ"
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" সূরা ফীল। "
                android:textSize="50dp"
                android:gravity="center"
                android:textColor=" #ff704d"
                android:layout_margin="30dp"
                android:background="#ffebe6"
                android:padding="10dp"
                />

        </LinearLayout>
    </ScrollView>




</LinearLayout>